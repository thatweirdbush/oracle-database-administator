                    <SolidColorBrush Color="White" Opacity="0.6"/>
                </TextBox.Background>
                <TextBox.BorderBrush>
                    <SolidColorBrush Color="#FF173D7B"/>
                </TextBox.BorderBrush>
            </TextBox>

